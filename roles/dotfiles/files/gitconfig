[alias]
  # Useful
  tree = log --graph --decorate --oneline --branches --tags --remotes --date=short -C -M
  find = "!f() { git log -p -m --grep=\"$1\"; }; f"
  findo = "!f() { git log -p -m --name-only --grep=\"$1\"; }; f"

  # Shortcuts
  # Commit/Tag
  sc = commit -s
  t = tag
  td = tag -d
  # view
  s = status
  d = diff
  sl = shortlog
  l = log
  lo = log --oneline
  lp = log -p
  lpo = log -p --oneline
  # Merge
  cp = cherry-pick
  m = merge
  # Clone/Push/Pull/Fetch
  cl = clone
  p = push
  po = push origin
  pu = push upstream
  pl = pull
  plo = pull origin
  plu = pull upstream
  f = fetch
  fo = fetch origin
  fu = fetch upstream
  # Rebase
  rb = rebase
  rba = rebase --abort
  rbc = rebase --continue
  rbi = rebase --interactive
  rbs = rebase --skip
[init]
  defaultBranch = main
